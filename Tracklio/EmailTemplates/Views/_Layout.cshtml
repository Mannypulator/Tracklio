<!DOCTYPE html>
<html lang="en">

<head>
    <script>
        (function () {
            try {
                var stored = localStorage.getItem('theme');
                if (stored === 'dark' || stored === 'light') {
                    document.documentElement.setAttribute('data-theme', stored);
                    return;
                }
                if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                } else {
                    document.documentElement.setAttribute('data-theme', 'light');
                }
            } catch (e) {
                console && console.error && console.error(e);
            }
        })();
    </script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        :root {
            --bg: #ffffff;
            --text: #111827;
            --muted: #6b7280;
            --primary: #0ea5e9;
            --card-bg: #ffffff;
        }

        [data-theme="dark"] {
            --bg: #0b1220;
            --text: #f8fafc;
            --muted: #9ca3af;
            --primary: #22d3ee;
            --card-bg: #071022;
        }

        /* Logo swap for dark/light */
        .logo-img {
            height: 40px;
            display: inline-block;
        }

        .logo-dark {
            display: none;
        }

        .logo-light {
            display: inline-block;
        }

        /* Use data-theme attribute first (set by script). Also support prefers-color-scheme as fallback. */
        [data-theme="dark"] .logo-dark {
            display: inline-block;
        }

        [data-theme="dark"] .logo-light {
            display: none;
        }

        @@media (prefers-color-scheme: dark) {
            .logo-dark {
                display: inline-block;
            }

            .logo-light {
                display: none;
            }
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f5f5f5;
            padding: 40px 20px;
            line-height: 1.6;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background: white;
            border-radius: 16px;
            padding: 48px 40px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 32px;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #22d3ee 0%, #0ea5e9 100%);
            border-radius: 50%;
            margin-right: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 24px;
        }

        .logo-text {
            font-size: 24px;
            font-weight: 600;
            color: #1f2937;
        }

        h1 {
            font-size: 32px;
            font-weight: 600;
            color: #1f2937;
            text-align: center;
            margin-bottom: 40px;
        }

        .greeting {
            font-size: 18px;
            color: #1f2937;
            text-align: center;
            margin-bottom: 24px;
        }

        .message {
            font-size: 16px;
            color: #4b5563;
            text-align: center;
            margin-bottom: 32px;
            line-height: 1.6;
        }

        .app-download {
            text-align: center;
            margin: 32px 0;
            padding: 24px 0;
            border-top: 1px solid #e5e7eb;
            border-bottom: 1px solid #e5e7eb;
        }

        .app-download p {
            font-size: 14px;
            color: #6b7280;
            margin-bottom: 16px;
        }

        .store-buttons {
            display: flex;
            justify-content: center;
            gap: 12px;
            flex-wrap: wrap;
        }

        .store-button {
            display: inline-block;
            background: #000;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 12px;
            font-weight: 600;
        }

        .footer {
            text-align: center;
            margin-top: 32px;
            padding-top: 24px;
            border-top: 1px solid #e5e7eb;
        }

        .footer p {
            font-size: 14px;
            color: #6b7280;
            margin-bottom: 8px;
        }

        .footer a {
            color: #0ea5e9;
            text-decoration: none;
        }

        .social-links {
            margin: 16px 0;
        }

        .social-links a {
            color: #0ea5e9;
            text-decoration: none;
            margin: 0 8px;
            font-size: 14px;
        }

        .unsubscribe {
            font-size: 12px;
            color: #9ca3af;
            margin-top: 16px;
        }

        .unsubscribe a {
            color: #6b7280;
            text-decoration: none;
        }

        /* Template-specific styles */
        .code-container {
            background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
            border: 2px dashed #22d3ee;
            border-radius: 12px;
            padding: 24px;
            text-align: center;
            margin-bottom: 16px;
        }

        .code-label {
            font-size: 16px;
            color: #1f2937;
            font-weight: 600;
            margin-bottom: 12px;
        }

        .code {
            font-size: 36px;
            font-weight: 700;
            color: #0c4a6e;
            letter-spacing: 4px;
            font-family: 'Courier New', monospace;
        }

        .instruction {
            font-size: 14px;
            color: #6b7280;
            text-align: center;
            margin-bottom: 8px;
        }

        .expiry-warning {
            font-size: 14px;
            color: #dc2626;
            text-align: center;
            margin-bottom: 32px;
        }

        .security-note {
            font-size: 14px;
            color: #6b7280;
            text-align: center;
            margin-bottom: 16px;
            line-height: 1.6;
        }

        .status-container {
            border-radius: 12px;
            padding: 24px;
            text-align: center;
            margin-bottom: 24px;
        }

        .status-container.success {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            border: 2px dashed #10b981;
        }

        .status-container.pending {
            background: linear-gradient(135deg, #fef9c3 0%, #fef08a 100%);
            border: 2px dashed #eab308;
        }

        .status-container.rejected {
            background: linear-gradient(135deg, #fecdd3 0%, #fda4af 100%);
            border: 2px dashed #dc2626;
        }

        .status-label {
            font-size: 16px;
            color: #1f2937;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .status {
            font-size: 28px;
            font-weight: 700;
        }

        .status.success {
            color: #047857;
        }

        .status.pending {
            color: #a16207;
        }

        .status.rejected {
            color: #991b1b;
        }

        .payment-button {
            display: block;
            width: 100%;
            max-width: 400px;
            margin: 24px auto;
            padding: 16px 32px;
            background: #1e293b;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 600;
        }
    </style>
</head>

<body>
    <div class="container">
    <!-- Header with Logo -->
    <div class="logo">
            <div style="display:flex;align-items:center;gap:8px;">
                <img class="logo-img logo-dark"
                    src="https://res.cloudinary.com/mannypulator/image/upload/v1760197793/logo-dark_kpmcpq.png"
                    alt="Tracklio Logo Dark" style="display:block;margin:0;height:40px;">
            </div>
        </div>

        <!-- Main Content -->
        @RenderBody()

        <!-- App Download Section -->
        <div class="app-download">
            <p>Start tracking your PCNs at the touch of a button! Download our app:</p>
            <div class="store-buttons">
                <a href="https://apps.apple.com/app/idXXXXXXXX" style="display: inline-block;">
                    <img src="https://res.cloudinary.com/mannypulator/image/upload/v1760184677/applestore_wssnqp.png"
                        alt="Download on the App Store" style="height: 40px;">
                </a>
                <a href="https://play.google.com/store/apps/details?id=com.tracklio.app" style="display: inline-block;">
                    <img src="https://res.cloudinary.com/mannypulator/image/upload/v1760184678/playstore_tbfpwy.png"
                        alt="Get it on Google Play" style="height: 40px;">
                </a>
            </div>
        </div>


        <!-- Footer -->
        <div class="footer">
            <p>Questions or concerns? Get in touch with us at</p>
            <p><a href="mailto:@ViewBag.SupportEmail">@ViewBag.SupportEmail</a> or @ViewBag.SupportPhone</p>

            <div class="social-links">
                Never miss a beat! Follow us on
                <a href="#">Twitter</a>,
                <a href="#">Facebook</a> and
                <a href="#">Instagram</a>.
            </div>

            <div class="unsubscribe">
                Don't want any more emails from Tracklio? <a href="#">Unsubscribe</a>.
            </div>
        </div>
    </div>
</body>


</html>