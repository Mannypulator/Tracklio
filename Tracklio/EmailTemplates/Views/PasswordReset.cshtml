@model Tracklio.EmailTemplates.Models.PasswordResetModel
@{
    Layout = "~/EmailTemplates/Views/_Layout.cshtml";
    ViewBag.Title = "Forgot Your Password?";
    ViewBag.SupportEmail = Model.SupportEmail;
    ViewBag.SupportPhone = Model.SupportPhone;
}

<h1>Forgot Your Password?</h1>

<p class="greeting">Hi @Model.FirstName</p>

<p class="message">
    We received a request to reset your Tracklio password.
</p>

<p class="message">
    If this was you, enter the code to confirm reset.
</p>

<div class="code-container">
    <div class="code-label">Your Verification Code</div>
    <div class="code">@Model.VerificationCode</div>
</div>

<p class="security-note">
    If you did not request this, your account is still safeâ€”no changes have been made.
</p>

<p class="security-note">
    For extra security, we recommend reviewing your account activity after logging in.
</p>
